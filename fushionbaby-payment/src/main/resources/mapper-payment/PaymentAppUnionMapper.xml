<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fushionbaby.payment.dao.PaymentAppUnionDao">
	<resultMap id="PaymentAppUnionResultMap" type="PaymentAppUnion">
		<id column="id" property="id" />
		<result column="order_number" property="orderNumber" />
		<result column="order_code" property="orderCode" />
		<result column="member_id" property="memberId" />
		<result column="settle_amount" property="settleAmount" />
		<result column="trade_time" property="tradeTime" />
		<result column="order_des" property="orderDes" />
		<result column="union_status" property="unionStatus" />
		<result column="source_code" property="sourceCode" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="tn" property="tn" />
		<result column="qn" property="qn" />
		<result column="remote_addr" property="remoteAddr" />
	</resultMap>
	<sql id="PaymentAppUnion_column">
		select 
	      id,order_number,order_code,member_id,settle_amount,trade_time,order_des,
	      union_status,source_code,create_time,update_time,tn,qn,remote_addr
	   from t_payment_app_union
	</sql>
	<insert id="add" parameterType="PaymentAppUnion">
		insert into 
			t_payment_app_union
		(id,order_number,order_code,member_id,settle_amount,trade_time,order_des,
	      union_status,source_code,create_time,tn,qn,remote_addr)
	    values 
	    (#{id},#{orderNumber},#{orderCode},#{memberId},#{settleAmount},#{tradeTime},#{orderDes},#{unionStatus},
	    #{sourceCode},now(),#{tn},#{qn},#{remoteAddr})
	</insert>
	<delete id="deleteById" parameterType="java.lang.Long">
		delete from t_payment_app_union where id = #{id}
	</delete>
	<update id="updateByMemberIdAndOrderCode">
		update t_payment_app_union
			set update_time = now()
			<if test="orderNumber!=null and orderNumber!=''">
			   , order_number = #{orderNumber}
			</if>
			<if test="tradeTime!=null and tradeTime!=''">
			   , trade_time = #{tradeTime}
			</if>
			<if test="orderDes!=null and orderDes!=''">
			   , order_des = #{orderDes}
			</if>
			<if test="unionStatus!=null and unionStatus!=''">
			   , union_status = #{unionStatus}
			</if>
			<if test="sourceCode!=null and sourceCode!=''">
			   , source_code = #{sourceCode}
			</if>
			<if test="tn!=null and tn!=''">
			   , tn = #{tn}
			</if>
			<if test="qn!=null and qn!=''">
			   , qn = #{qn}
			</if>
			<if test="remoteAddr!=null and remoteAddr!=''">
			   , remote_addr = #{remoteAddr}
			</if>
		<where>
			member_id = #{memberId} and order_code = #{orderCode}
		</where>
	</update>
	<select id="getById" resultMap="PaymentAppUnionResultMap" parameterType="java.lang.Long">
		<include refid="PaymentAppUnion_column"/> where id = #{id}
	</select>
	<select id="getByOrderNumber" resultMap="PaymentAppUnionResultMap" parameterType="java.lang.String">
		<include refid="PaymentAppUnion_column"/> where order_number = #{orderNumber}
	</select>
	<select id="getByMemberIdAndOrderCode" resultMap="PaymentAppUnionResultMap" >
		<include refid="PaymentAppUnion_column"/> 
		where member_id = #{memberId} and order_code = #{orderCode}
	</select>
	
	<delete id="deleteByOrderCodeAndMemberId">
		delete from t_payment_app_union where member_id = #{memberId} and order_code = #{orderCode}
	</delete>
</mapper>